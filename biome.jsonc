{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"files": {
		"includes": ["client/src/components/**/*.tsx", "client/src/components/**/*.stories.tsx"],
		"experimentalScannerIgnores": [
			".llm/**/*",
			"node_modules",
			"dist",
			"build",
			"coverage",
			"package-lock.json",
			"pnpm-lock.yaml",
			"yarn.lock",
			"src/routeTree.gen.ts",
			"worker-configuration.d.ts"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": false,
			"bracketSameLine": false,
			"quoteStyle": "single",
			"attributePosition": "multiline"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"overrides": [
		{
			"includes": ["test/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
